{
  "manifest_version": 2,
  "name": "Skola24 Schema",
  "version": "0.4",
  "content_scripts": [
    {
      "matches": ["https://web.skola24.se/*", "https://skolmaten.se/*"],
      "js": ["jquery.min.js", "skola24.js", "skolmaten.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "permissions": ["storage", "tabs"]
}
